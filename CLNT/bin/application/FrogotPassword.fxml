<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="414.0" prefWidth="446.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ForgotPasswordController">
   <bottom>
      <AnchorPane fx:id="NewPasswordPanel" prefHeight="536.0" prefWidth="446.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="ForgotPasswordTitleLable" layoutX="36.0" prefHeight="81.0" prefWidth="394.0" text="Forgot  Password" textFill="#2802fd">
               <font>
                  <Font name="Arial Nova Bold" size="44.0" />
               </font>
            </Label>
            <Label fx:id="SecondSentence" layoutX="41.0" layoutY="81.0" prefHeight="30.0" prefWidth="341.0" text="To reset the password you must enter your Username and ID" textFill="#0c03ff">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <Label fx:id="UserNameLabel" layoutX="70.0" layoutY="126.0" prefHeight="48.0" prefWidth="84.0" text="Username" textFill="#0000ca">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="IdLabel" layoutX="70.0" layoutY="194.0" prefHeight="27.0" prefWidth="82.0" text="ID" textFill="#0000ca">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="UserNameTextArea" layoutX="182.0" layoutY="135.0" prefHeight="29.0" prefWidth="230.0" promptText="Example: alex mashi" />
            <TextField fx:id="IdTextArea" layoutX="182.0" layoutY="194.0" prefHeight="28.0" prefWidth="230.0" promptText="Example: 123584477" />
            <Button fx:id="SaveButton" layoutX="182.0" layoutY="241.0" mnemonicParsing="false" onAction="#sendNewPasswordTorUser" prefHeight="40.0" prefWidth="81.0" text="Submit" />
            <Button fx:id="BackButton" layoutX="14.0" layoutY="482.0" mnemonicParsing="false" onAction="#BackButtonMeth" prefHeight="40.0" prefWidth="81.0" text="Back" />
            <Label fx:id="incorr" layoutX="61.0" layoutY="346.0" prefHeight="30.0" prefWidth="344.0" text="The user name or password is incorrect" textFill="#b20000" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="tryagain" layoutX="160.0" layoutY="376.0" text="Please try again" textFill="#b20000" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
